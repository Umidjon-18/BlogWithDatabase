<%- include("partials/header"); -%>
    <h1>Compose</h1>
    <form class="" action="/update/<%= id %>" method="post">
      <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" name="postTitle" value="<%= title %>">
        <label>Post</label>
        <textarea class="form-control" id="postBody" name="postBody" rows="8" cols="30" value="<%= content %>"><%= content %></textarea>
      </div>
      <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>


<%- include("partials/footer"); -%>